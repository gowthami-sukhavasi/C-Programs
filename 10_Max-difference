//Find the max difference of 2 elements.
//Output - 6

#include <bits/stdc++.h>
using namespace std;
 
int main() {
	// your code goes here
	int a[] = {1,7,4,2,5,3};
	int n = sizeof(a)/sizeof(a[0]);
	int i,min=INT_MAX,max=INT_MIN;
 
	for(i=0;i<n;i++){
		if(a[i]>max){
			max=a[i];
		}
		if(a[i]<min){
			min=a[i];
		}
	}
	cout<<max-min;
 
	return 0;
}
